{
  "version": "0.1.0",
  "name": "HapiRESTServer",
  "description": "Template for Hapi Rest Server",
  "keywords": [
    "template",
    "hapi",
    "rest",
    "server",
    "webpack",
    "babel",
    "flow",
    "eslint",
    "esdoc",
    "node",
    "githooks",
    "husky",
    "openapi"
  ],
  "author": "djunker <devlin.junker@gmail.com>",
  "license": "ISC",
  "main": "dist/server.bundle.js",
  "scripts": {
    "start-watch": "rm -rf ./dist/; ./node_modules/.bin/webpack --watch & (sleep 20s && nodemon dist/server.bundle.js)",
    "test-watch": "node_modules/.bin/mocha --watch --env.unit_test",
    "dev-watch": "./node_modules/.bin/webpack --watch",
    "test": "node node_modules/.bin/mocha --env.unit_test",
    "doc": "./node_modules/.bin/esdoc && cp ./openapi.yaml docs/swagger/",
    "dev": "npm run build && node dist/server.bundle.js",
    "lint": "node_modules/.bin/eslint src/",
    "build": "./node_modules/.bin/webpack",
    "clean": "rm -rf ./dist",
    "help": "echo \"$(cat help.txt)\"",
    "doc-image": "madge ./src -i docs/image/dependency.png & npm run doc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/hooks/pre-commit.sh"
    }
  },
  "dependencies": {
    "@hapi/hapi": "^18.4.1",
    "@hapi/inert": "^5.2.2",
    "hapi-pino": "^6.5.0",
    "lodash": "^4.17.15",
    "mariadb": "^2.3.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-flow-strip-types": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-flow": "^7.9.0",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-source-map-support": "^2.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "esdoc": "^1.1.0",
    "esdoc-flow-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-flowtype-errors": "^4.2.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "flow-bin": "^0.107.0",
    "flow-webpack-plugin": "^1.2.0",
    "husky": "^4.2.5",
    "karma-chrome-launcher": "^3.1.0",
    "mocha": "^6.2.3",
    "mocha-loader": "^3.0.0",
    "nodemon": "^1.19.4",
    "pino-pretty": "^3.6.1",
    "prettier": "^1.19.1",
    "require-context": "^1.1.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.17",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
